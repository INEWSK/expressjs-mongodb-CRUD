<h1 class="display-4">Create inventory</h1>
<br />
<div class="card">
  <div class="card-body">
    <form action="/create" method="post" class="needs-validation">
      <div class="form-row">
        <div class="form-group col-md-8">
          <label for="inv_name">Name</label>
          <input
            type="text"
            class="form-control"
            name="inv_name"
            id=""
            required
          />
        </div>

        <div class="form-group col-md-4">
          <label for="inv_manager">Manager</label>
          <label class="sr-only" for="inlineFormInputGroup">Username</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">@</div>
            </div>
            <input
              type="text"
              class="form-control"
              name="inv_manager"
              id=""
              placeholder="Username"
              required
            />
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="inv_type">Type</label>
        <input type="text" class="form-control" name="inv_type" id="" />
      </div>

      <div class="form-group">
        <label for="inv_quantity">Quantity</label>
        <input type="number" class="form-control" name="inv_quantity" id="" />
      </div>

      <div class="form-group">
        <label for="inv_street">Street</label>
        <input type="text" class="form-control" name="inv_street" id="" />
      </div>

      <div class="form-group">
        <label for="inv_building">Building</label>
        <input type="text" class="form-control" name="inv_building" id="" />
      </div>

      <div class="form-group">
        <label for="inv_countty">Country</label>
        <input type="text" class="form-control" name="inv_country" id="" />
      </div>

      <div class="form-group">
        <label for="inv_code">Zip code</label>
        <input type="number" class="form-control" name="inv_code" id="" />
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inv_lat">Lat</label>
          <input type="text" class="form-control" name="inv_lat" id="" />
        </div>

        <div class="form-group col-md-6">
          <label for="inv_lng">Lng</label>
          <input type="text" class="form-control" name="inv_lng" id="" />
        </div>
      </div>

      <div class="form-group">
        <!-- <div class="mb-3"> -->
        <label for="inv_photo">Photo</label>
        <input class="form-control" type="file" id="formFile" />
        <!-- </div> -->
      </div>

      <hr class="my-4" />
      <div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>
