<h1 class="display-4">Inventory</h1>
<p class="lead">
  An express server that provides basic CRUD services for the inventory
  collection
</p>

<hr class="my-4" />

<div>
  <button
    class="btn btn-primary"
    onclick="location.href='/create'"
    type="button"
  >
    Create new inventory
  </button>
</div>

<br />

<div class="card">
  <div class="card-header">Inventory</div>
  <ul class="list-group list-group-flush">
    <% if (inventory.length == 0) { %>
    <li class="list-group-item">No item found</li>
    <% } else { %> <% inventory.forEach(item=> { %>
    <li class="list-group-item"><%- item.inv_name %></li>
    <% }) %> <% } %>
  </ul>
</div>
