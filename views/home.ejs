<h1 class="display-4">Inventory</h1>
<p class="lead">
  An express server that provides basic CRUD services for the inventory
  collection
</p>

<hr class="my-4" />

<div>
  <button
    class="btn btn-primary"
    onclick="location.href='/create'"
    type="button"
  >
    Create new inventory
  </button>
</div>

<br />

<!-- success create item alert message  -->
<% if (success !='' ) { %>
<div class="alert alert-success" role="alert"><%- success %></div>
<% } %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Manager</th>
      <th scope="col">Quantity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% inventory.forEach((item, index)=> { %>
    <tr>
      <th><%- index + 1 %></th>
      <td><%- item.inv_name %></td>
      <td><%- item.inv_manager %></td>
      <td><%- item.inv_quantity %></td>
      <td>
        <div class="btn-group btn-group-sm" role="group" aria-label="">
          <button
            type="button"
            class="btn btn-primary"
            onclick="location.href='/edit?_id=<%- item._id %>'"
          >
            Edit
          </button>
          <button
            type="button"
            class="btn btn-danger"
            onclick="location.href='/delete?_id=<%- item._id %>'"
          >
            Delete
          </button>
        </div>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
