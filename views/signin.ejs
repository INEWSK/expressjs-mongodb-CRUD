<!-- auth alert message  -->
<% if (message) { %>
<div class="ui <%- message.type %> message" role="alert">
  <i class="close icon"></i>
  <div class="header"><%- message.title %></div>
  <p><%- message.message %></p>
</div>
<% } %>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <form class="ui form" action="/signin" method="post">
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            <input
              type="text"
              placeholder="Username"
              name="username"
              required
            />
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <input type="password" name="password" />
            <i class="lock icon"></i>
          </div>
        </div>
        <button class="ui blue fluid submit button" type="submit">Login</button>
      </form>
    </div>
    <div class="middle aligned column">
      <div class="ui big button" onclick="location.href='/signup'">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">Or</div>
</div>
